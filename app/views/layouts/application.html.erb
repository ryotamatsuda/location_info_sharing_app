<!DOCTYPE html>
<html>
  <head>
    <title>LocationInfoSharingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <ul>
        <li><%= link_to '新規アピール投稿', new_appeal_path %></li>
        <li><%= link_to 'エンドユーザー一覧', end_users_path %></li>
        <li><%= link_to 'アピール一覧', appeals_path %></li>
        <li><%= link_to 'ログアウト', destroy_end_user_session_path, method: :delete %></li>
      </ul>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
